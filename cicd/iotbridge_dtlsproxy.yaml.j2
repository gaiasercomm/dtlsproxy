apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    run: iotbridge
  name: iotbridge
spec:
  replicas: 1
  selector:
    matchLabels:
      run: iotbridge
  template:
    metadata:
      labels:
        run: iotbridge
    spec:
      serviceAccountName: micro-services
      containers:
      - image: {{ iotbridge_image }}
        imagePullPolicy: Always
        name: iotbridge-grpc
        env:
        - name: MICRO_SERVER_ADDRESS
          value: ":50051"
        - name: STATIC_SELECTOR_PORT_NUMBER
          value: "50051"
        - name: TZ
          value: "Asia/Taipei"
        - name: CONF_REPO_URL
          value: "neutral_dev_config:sercomm2483@122.116.67.86:10443/configuration/{{ site_name }}.git"
        - name: CONF_BRANCH
          value: "iotbridge_{{ iotbridge_vers }}"
        - name: MAGIC
          value: "1"
        ports:
        - containerPort: 50051
          protocol: TCP
          name: ib-grpc
        - containerPort: 5683
          protocol: UDP
          name: ib-coap
        #- containerPort: 5684
        #  protocol: UDP
        #  name: ib-dtls
        resources:
          requests:
            cpu: {{ iotbridge_cpu_request | default("25m") }}
      - image: {{ iotbridge_rest_image }}
        imagePullPolicy: Always
        name: iotbridge-rest
        ports:
        - containerPort: 28080
          protocol: TCP
          name: ib-rest
        resources:
          requests:
            cpu: {{ iotbridge_rest_cpu_request | default("25m") }}
      - image: {{ dtlsproxy_image }}
        imagePullPolicy: Always
        name: iotbridge-dtls
        env:
        - name: LISTEN
          value: "0.0.0.0:5684"
        - name: BACKEND
          value: "localhost:5683"
        - name: KEYS
          value: "bmJpb3QtenVyaWNoLXRlc3Q6YWJpbGl0eTEyMw=="
        ports:
        - containerPort: 5684
          protocol: UDP
          name: ib-dtls
        resources:
          requests:
            cpu: {{ iotbridge_dtls_cpu_request | default("25m") }}

---
kind: Service
apiVersion: v1
metadata:
  name: iotbridge-rest
  labels:
    run: iotbridge
spec:
  type: ClusterIP
  ports:
  - name: rest
    protocol: TCP
    port: 80
    targetPort: ib-rest
  selector:
    run: iotbridge

---
kind: Service
apiVersion: v1
metadata:
  name: iotbridge-grpc
  labels:
    run: iotbridge
spec:
  type: ClusterIP
  ports:
  - name: grpc
    protocol: TCP
    port: 50051
    targetPort: ib-grpc
  selector:
    run: iotbridge

---
kind: Service
apiVersion: v1
metadata:
  name: iotbridge-coap
  annotations:
    service.beta.kubernetes.io/azure-load-balancer-resource-group: {{ site_name }}
  labels:
    run: iotbridge
spec:
  type: LoadBalancer
  loadBalancerIP: {{ coap_pip }}
  ports:
  - name: coap
    protocol: UDP
    port: 5683
    targetPort: ib-coap
  #- name: dtls
  #  protocol: UDP
  #  port: 5684
  #  targetPort: ib-dtls
  selector:
    run: iotbridge

---
kind: Service
apiVersion: v1
metadata:
  name: iotbridge-dtls
  annotations:
    service.beta.kubernetes.io/azure-load-balancer-resource-group: {{ site_name }}
  labels:
    run: iotbridge
spec:
  type: LoadBalancer
  loadBalancerIP: {{ coap_pip }}
  ports:
  - name: dtls
    protocol: UDP
    port: 5684
    targetPort: ib-dtls
  selector:
    run: iotbridge

---
# HPA
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: iotbridge
  namespace: default
spec:
  maxReplicas: {{ iotbridge_max_replicas | default(10) }}
  minReplicas: {{ iotbridge_min_replicas | default(2) }}
  scaleTargetRef:
    apiVersion: extensions/v1beta1
    kind: Deployment
    name: iotbridge
  targetCPUUtilizationPercentage: {{ iotbridge_hpa_cpu_threshold | default(60) }}
